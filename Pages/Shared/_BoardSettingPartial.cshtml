@model AgileGame.ViewModels.TableroColumnas

<div class="modal fade" role="dialog"  aria-hidden="true" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog modal-dialog-centered" role="document" >
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Tablero </h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
    <form method="post">
                <div class="modal-body">

                    <p><b>Titulo:</b>@Model.MiTablero.Title </p>
                    <p><b>Tablero ID:</b> @Model.MiTablero.Id</p>
                    
                    <p><b>Columnas: </b> @Model.Columnas.Count()</p>
                    <hr/>
                    @foreach (var col in Model.Columnas)
                    {
                    <label>@col.Title  --> </label> 
                    <label>Max WiP:</label> <input asp-for=@col.Limite /> 

                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn summit">Actualizar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    
                </div>
    </form>
            </div>
   
    </div>
</div>